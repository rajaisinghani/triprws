.main {
  font-size: 14px;
  background: white;
}

.row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: white;
  padding: 10px;
}

.payment-text {
  font-size: 18px;
  text-align: center;
}

.description-text {
  font-size: 14px;
  color: #504f4f;
  text-overflow: ellipsis;
  overflow: hidden;
}

.title-text {
  font-size: 20px;
  font-weight: bold;
  color: black;
}

.price-text {
  font-size: 20px;
  font-weight: bold;
}

.button {
  width: 90%;
  text-transform: uppercase;
  font-size: 22px;
  font-weight: bolder;
  color: white;
  margin: auto 20px;
}

.black {
  background-color: #504f4f;
}

.selected {
  border: 5px solid crimson;
}
