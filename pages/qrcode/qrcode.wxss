.section {
  width: 70%;
  height: 35%;
  background-color: white;
  text-align: center;
  border-radius: 15px;
  padding: 15px;
  margin: auto;
}

.background-image {
  width: 100%; 
  height: 100%; 
  z-index: -1; 
  position: absolute
}

.border {
  border-color: crimson;
  border-width: 0 0 1px 0;
  border-style: dashed;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 30px;
}

.description {
  font-size: 14px;
  color: gray;
}

page {
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 0, 0, 0.6)
}
