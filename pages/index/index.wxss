.main {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.button {
  width: 80%;
  font-size: 16px;
  color: white;
  font-weight: bold;
  text-transform: uppercase;
  margin: 10px;
  height: 45px;
  text-align: center;
  display: flex;
  justify-content: center;
}

.red {
  color: crimson;
}

.red-button {
  background: crimson;
}

.green-button {
  background: yellowgreen;
}

.redeem-text {
  margin-top: 10px;
  font-size: 16px;
}

.header {
  display: flex;
  flex-direction: row;
  font-size: 16px;
  text-align: center;
  width: 100%;
  font-weight: bold;
  background: white;
}

.background-image {
  position: absolute;
  z-index: 0;
  width: 100%;
  height: 400rpx;
  top: 0px;
}

.userinfo {
  width: 100%;
  height: 400rpx;
  padding-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(228, 0, 46, 0.603);
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: white;
  font-size: 20px;
  font-weight: bold;
}

.userinfo-id {
  color: white;
  font-size: 14px;
}

.usermotto {
  margin-top: 200px;
}

.floating-button {
  height: 50px;
  width: 50px;
  z-index: 9999;
  position: fixed;
  bottom: 25px;
  right: 25px;
}

.row {
  height: 105px;
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-top: 2.5%;
  background: white;
  overflow: hidden;
  padding: 10px;
}

.description-text {
  font-size: 14px;
  color: #504f4f;
  height: 50%;
  text-overflow: ellipsis;
  overflow: hidden;
}

.title-text {
  font-size: 16px;
  font-weight: bold;
  color: black;
}

.price-text {
  font-size: 18px;
}

.qrcode {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.crown {
  z-index: 9999;
  width: 30px;
  height: 30px;
  border-radius: 15px;
  position: fixed;
  left: 409rpx;
  top: 105rpx;
}

.button-icon {
  height: 35px; 
  width: 35px; 
  position: absolute; 
  top: 5px; 
  left: 5px;
}
