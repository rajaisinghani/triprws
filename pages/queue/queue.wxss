/* pages/queue_registration/queue_registration.wxss */
.image {
  width: 100%;
  height: 300rpx;
}

.main {
  background: white;
  text-align: center;
}

.reference {
  font-size: 14px;
  font-weight: bold;
  color: #4a4a4a;
}

.queue-number {
  background: #4a4a4a;
  width: 130px;
  height: 130px;
  border-radius: 65px;
  text-align: center;
  color: white;
  margin: 10px auto;
  vertical-align: middle;
  font-size: 75px;
  line-height: 130px;
}

.title-text {
  font-size: 22px;
  font-weight: bold;
  margin: 10px;
}

.description-text {
  color: #4a4a4a;
  font-size: 18px;
  line-height: 24pt;
}

.text-container {
  padding: 20px 40px;
}

.button {
  background: crimson;
  color: white;
  font-size: 18px;
  text-transform: uppercase;
  font-weight: bold;
  width: 70%;
  margin-top: 25px;
}

.green-dots {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.dot {
  height: 10px;
  width: 10px;
  border-radius: 5px;
  background: greenyellow;
  margin: 4px;
}