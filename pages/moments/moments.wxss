/* pages/moments/moments.wxss */

.row {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.item {
  height: 170px;
  width: 45%;
  margin: 10px auto;
  background: white;
  padding: 10px;
  border-radius: 5px;
}

.image {
  height: 80%;
  width: 100%;
}

.icons {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-right: 10px;
  padding-left: 10px;
}

.group {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.icon {
  height: 20px;
  width: 20px;
  margin-right: 5px;
}

.modal-box {
  position: fixed;
  background: rgba(0, 0, 0, 0.4);
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 9999;
}

.modal-content {
  margin-top: 150rpx;
  height: 65%;
  border-radius: 10rpx;
  background: white;
  padding: 10px;
  margin-left: 50rpx;
  margin-right: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.modal-content image {
  width: 100%;
}

.buyButton {
  height: 100rpx;
  width: 100%;
  color: white;
  background: crimson;
  text-transform: uppercase;
}
