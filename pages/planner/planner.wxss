.floating-button {
  height: 50px;
  width: 50px;
  z-index: 9999;
  position: fixed;
  bottom: 25px;
  right: 25px;
}

.time {
  color: black;
  font-size: 12px;
  font-weight: bold;
  position: relative;
  right: 65px;
  top: 22px;
  z-index: 10;
}

.row {
  display: flex;
  flex-direction: row;
  width: 100%;
  overflow: hidden;
}

.description-text {
  font-size: 12px;
  color: #504f4f;
  height: 120px;
  text-overflow: ellipsis;
  overflow: hidden;
}

.title-text {
  font-size: 14px;
  font-weight: bold;
  color: black;
}

.button-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.button {
  background: crimson;
  height: 30px;
  font-size: 14px;
  color: white;
  margin: 0px 10px;
}
